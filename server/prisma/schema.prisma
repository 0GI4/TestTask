// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Пользователей не заводим: считаем по IP. Голос — это запись в IdeaVote.

model Idea {
  id           Int         @id @default(autoincrement())
  title        String       @unique 
  description  String
  votesCount   Int         @default(0) @map("votes_count")
  createdAt    DateTime    @default(now()) @map("created_at")

  votes        IdeaVote[]

  @@map("idea")
  @@index([votesCount])
  @@index([createdAt])
}

model IdeaVote {
  id         BigInt    @id @default(autoincrement())
  ideaId     Int       @map("idea_id")
  // Храним IP как String — Prisma работает без танцев. В БД колонка будет inet (см. SQL миграцию ниже).
  ip         String
  createdAt  DateTime  @default(now()) @map("created_at")

  idea       Idea      @relation(fields: [ideaId], references: [id], onDelete: Cascade)

  @@map("idea_vote")
  @@unique([ideaId, ip])
  @@index([ip])
  @@index([ideaId])
  @@index([createdAt])
}
